    "module": "CommonJS",
    "moduleResolution": "Node",
    "target": "ES2022",
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    "src/server.mts",
    "config",
    "api",
    "models",
    "middlewares",
    "src/services"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
